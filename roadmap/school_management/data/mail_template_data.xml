<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email template for new students -->
        <record id="student_confirm_email" model="mail.template">
            <field name="name">Welcome Student</field>
            <field name="model_id" ref="school_management.model_sm_student"/>
            <field name="subject">Welcome,
                <t t-out="object.name"/>
            </field>
            <field name="email_from" eval="object.company_id.email_formatted"/>
            <field name="email_to" eval="object.email"/>
            <field name="description">Sent to students with their information</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Hello
                        <t t-out="object.name"/>,
                    </p>
                    <p>Welcome to our school! We are happy to have you with us.</p>
                    <p>Best regards, School Management Team</p>
                    <div style="width: 18rem;">
                        <div>
                            <h5>Your Information</h5>
                            <p>Your name:
                                <t t-out="object.name"/>
                            </p>
                            <p>Your mail:
                                <t t-out="object.email"/>
                            </p>
                            <p>Your age:
                                <t t-out="object.age"/>
                            </p>
                            <t t-if="object.school_name">
                                <p>Your School:
                                    <t t-out="object.school_name"/>
                                </p>
                            </t>
                            <t t-if="object.class_list">
                                <p>Your Classes:
                                    <t t-out="object.class_list"/>
                                </p>
                            </t>
                        </div>
                    </div>
                </div>
            </field>
            <field name="lang" eval="object.lang"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>